<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        tools:context="tgprojects.xyz.care.HomeActivity"
        >
    <TextView
            android:id="@+id/intro_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="44sp"
            android:layout_margin="16dp"
            android:layout_gravity="center"
            android:text="Hello, Tylor"
            android:textColor="@color/textColorPrimary"
            android:textStyle="bold"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Helpful Categories"
            android:layout_margin="12dp"
            />
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardElevation="2dp"
            >
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:weightSum="4"
                >
            <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:drawableTop="@drawable/house_circle"
                    android:gravity="center"
                    android:text="Housing" />
            <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/medical_circle"
                    android:drawablePadding="4dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:text="Medical" />
            <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/employment_circle"
                    android:drawablePadding="4dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Employment" />
            <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/education_circle"
                    android:drawablePadding="4dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Education" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Important Information"
            android:layout_margin="12dp"
            />
</LinearLayout>
